<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditRuanganActivity">

    <EditText
        android:id="@+id/etNamaRuangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nama Ruangan"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/etKapasitas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etKapasitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Kapasitas Ruanagan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUpdateRuangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etKapasitas" />

</androidx.constraintlayout.widget.ConstraintLayout>